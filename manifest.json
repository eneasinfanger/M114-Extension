{
  "manifest_version": 3,
  "name": "Encryption Help :)",
  "description": "Helps with encryption and decryption",
  "version": "1.0.0",
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "popup/icon.png"
  },
  "content_scripts": [
    {
      "js": ["content-script/content.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "popup/icon.png",
    "32": "popup/icon.png",
    "48": "popup/icon.png",
    "128": "popup/icon.png"
  }
}